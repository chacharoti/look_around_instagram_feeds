<% if @error.nil? %>
  update_path()
  $("#error .alert").hide()
  $("#instagram-news-feeds").html("<%= escape_javascript(render partial: 'instagram/news_feed', locals: { news_feeds: @news_feeds }) %>");
<% else %>
  update_path()
  $("#error .alert").show()
  $("#error .alert").html("<%= @error %>")
  $("#instagram-news-feeds").html('')
<% end %>

function update_path(){
  var default_path = "<%= look_around_instagram_index_path %>"
  var look_around_path = document.getElementById('look_around')
  look_around_path.href = window.location.origin + default_path
}