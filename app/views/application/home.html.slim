.container
  .row
    .col-md-12
      h1 Look Around Instagram New Feeds
  .row
    .col-md-6
      #map
    .col-md-6
      .form-group.col-md-12
        label for="latitude-input" Latitude (-90 to 90)
        input#latitude-input.form-control type="text" placeholder="Enter a latitude"
      .form-group.col-md-12
        label for="longitude-input" Longitude (-180 to 180)
        input#longitude-input.form-control type="text" placeholder="Enter a longitude"
      .form-group.col-md-12
        label for="radius-input" Radius (1 to 5000) (meters)
        input#radius-input.form-control type="number" placeholder="Enter radius" value="1000" min="1" max="5000"
      .form-group.col-md-12
        = link_to 'Look Around',  look_around_instagram_index_path,
                                  :id => "look_around",
                                  :remote => true,
                                  :method => :get, 
                                  :class => 'btn btn-success'
  #instagram-news-feeds.row
  #error.row
    .col-md-12
      .alert.alert-danger
                                    
javascript:
  var mapGlobal;
  var infowindow;
  function initMap() {
    var myLatLng = {lat: 37.7749, lng: -122.4194};

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 12,
      center: myLatLng
    });
    mapGlobal = map;
    infowindow = new google.maps.InfoWindow();
    var marker;

    google.maps.event.addListener(map, 'click', function(e) {
      if (marker) {
        marker.setPosition(e.latLng);
        update_lat_lng_value(e.latLng);
      } else {        
        marker = new google.maps.Marker({
          position: e.latLng,
          map: map,
          draggable:true
        });

        update_lat_lng_value(e.latLng);

        google.maps.event.addListener(marker, 'dragend', function() {
          update_lat_lng_value( marker.position );
        });
      }

      map.panTo(marker.getPosition());
    });    
  }

  function update_lat_lng_value( position ){
    marker_latitude = position.lat();
    marker_longitude = position.lng();

    $('#latitude-input').val( marker_latitude );
    $('#longitude-input').val( marker_longitude );
  }

  function init_instagram_marker( feed_latitude, feed_longitude, short_info ) {
    feed_location_lat = feed_latitude;
    feed_location_lng = feed_longitude;
    feed_location = new google.maps.LatLng( feed_location_lat, feed_location_lng );

    add_marker( feed_location, short_info )
  }

  
  function add_marker( location_log, short_info ) {
    var news_feed_marker;
    news_feed_marker = new google.maps.Marker({
      position: location_log,
      map: mapGlobal
    });

    google.maps.event.addListener(news_feed_marker, "click", function() {
      infowindow.close();
      infowindow.setContent( short_info );
      infowindow.open(mapGlobal, news_feed_marker);
    });
  }

  $('a#look_around').on('click', function() {
    latitude_value = $('#latitude-input').val()
    longitude_value = $('#longitude-input').val()
    radius_value = $('#radius-input').val();
    if( radius_value == '' ){
      radius_value = '1000'
    }
    this.href = this.href + '?latitude=' + latitude_value + 
                            '&longitude=' + longitude_value +
                            '&radius=' + radius_value
  });